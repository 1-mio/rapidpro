-load i18n

.flip
  .card{ ng-class:'{"flipped":isFlipped}'}
    .face{ng-class:'{"back":nodeType=="actions","front":nodeType!="actions"}'}
      .rule-editor.modal.translation.wide-dialog
        .flip-button{ng-click:'isFlipped=!isFlipped', ng-show:'!ivr'}
          .icon-menu-2
        .rules{ng-show:'ivr'}
          -include 'partials/ivr_editor.haml'
        .rules{ng-show:'!ivr'}
          -include 'partials/rule_editor.haml'

    .face{ng-class:'{"front":nodeType=="actions","back":nodeType!="actions"}'}
      .action-editor.modal{ class:'[[config.type]]', data-dismiss:'modal'}
        .flip-button{ng-click:'isFlipped=!isFlipped', ng-show:'!ivr'}
          .icon-tree-2
        -include 'partials/action_editor.haml'

