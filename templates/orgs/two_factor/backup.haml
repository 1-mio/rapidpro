-extends 'base.html'
-load smartmin i18n

-block content
  .flex.justify-center
    .w-128.p-12
      .page-title
        -trans "Two-factor Authentication"

      .mt-4
        -blocktrans
          If you no longer have access to the device you setup two-factor authentication with you can enter one of your
          backup tokens below.

      %form(method="POST")
        -csrf_token

        .mt-4
          %temba-textinput(name='token' maxlength=8 placeholder='{{_("8-character token")|escape}}')

        -if form.token.errors
          .alert-error.mt-4
            {{ form.token.errors }}

        .mt-6
          %input.button-primary(type="submit" value='{{_("Verify")}}')

          %a.button-light.float-right(href="{% url 'users.two_factor_verify' %}")
            -trans "Use Device"
