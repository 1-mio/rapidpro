-extends "smartmin/base.html"
-load i18n compress temba

-block page-top
  .row
    .span12
      %h2
        -trans "Connect a Ticketing Service"
      .instructions
        %p
          -blocktrans
            Ticketing Services let a human agent take over communication for a contact. In a flow you can create a new
            ticket for a contact and from that point until the ticket is closed all incoming and outgoing messages will
            be handled by the service you connect.

        %p
          -blocktrans
            Select the ticketing service you want to connect below to get started.

-block content
  .service-options
    -for ticketer_type in ticketer_types
      .service-row
        .row
          .span3
            %a.btn.btn-primary.btn-primary-muted.btn-connect{href:"{% url 'tickets.types.'|add:ticketer_type.slug|add:'.connect' %}"}
              .btn-container
                .service-glyph{class:"{{ ticketer_type.icon }}"}
                %p.service-text= ticketer_type.name
          .span8
            .service-description
              %div
                {% include ticketer_type.get_connect_blurb %}

-block extra-style
  :css
    .service-description {
      padding: 25px 40px;
      height: 50px;
      width:95%;
      background: #f5f5f5;
      font-size: 16px;
    }

    .align-text-center {
      text-align: center;
    }

    .service-text {
      margin-top: 10px;
    }

    .btn-container {
      margin-right: 10px;
    }

    .external {
      text-align: center;
    }

    .service-glyph {
      line-height: 40px;
      text-decoration: none;
      font-size: 40px;
      display: inline;
      padding-bottom: 10px;
    }

    .btn-connect {
      padding: 10px 10px;
      width: 95%;
      height: 78px;
    }

    .service-row {
      clear: both;
      margin-bottom: 10px;
    }

    .service-row .span8 {
      margin-left: 0px;
    }
