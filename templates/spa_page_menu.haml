-load public

:css
  .gear-flag {
    display: inline-block;
    margin: 0px 3px;
    font-size: 80%;
    color: #ccc;
    float: right;
  }

  #gear-container {
    margin-left: 0em;
  }

  #gear-container .button-light.dropdown-toggle {
    margin-top: 0 !important;
  
  }

  #gear-container .button-light.dropdown-toggle {
    padding-top: 0.64em;
    padding-bottom: 0.64em;
  }

  #gear-container .button-light:hover {
    background: #f1f1f1;
  }

  #gear-container .button-light:hover, #gear-container .button-light.dropdown-toggle:hover, #gear-container .button-light.dropdown-toggle:hover .icon-menu {
    background: #f1f1f1;
    color: #999 !important;
  }

  .dropdown-menu {
    padding: .9em 1.25em;
    padding-bottom: 0.6em;
  }

  .menu-item {
    margin-top: 0.2em;
    margin-bottom: 0.2em;
    font-size: 1.1rem;
  }

  .spa-gear-buttons, .spa-gear-menu {
    --button-y: 0.2em;
    --button-x: 0.5em;
  }

  #gear-container .spa-gear-menu .button-light.dropdown-toggle {
    padding-top: 0.5em;
    padding-bottom: 0.4em;
  }


  .header-button {
    background:rgba(0,0,0,.15);
    color: #fff;
    transition: all 200ms ease-in-out;
  }
  
  .header-button:hover, .menu-button:hover, .open .menu-button {
    cursor:pointer;
    background:rgba(0,0,0,.25);
    box-shadow: inset 4px 4px 57px -28px rgba(0,0,0,0.75);
  }

  .menu-button {
    --icon-color: #fff;
  }


:javascript

  function handleMenuClicked(evt) {
    var link = evt.target;
    var href = link.getAttribute("data-href");
    var modax = link.getAttribute("data-modax");
    if (modax) {
      showModax(modax, href);
    } else {
      if (href) {
        fetchURL(href);
      }
    }
  }

  function handleMoreToggle(event) {
    var more = document.querySelector(".more");
    if (more) {
      var classes = more.classList;
      if (classes.contains("open")) {
        classes.remove("open");
      } else {
        classes.add("open");
      }
      event.stopPropagation();
      event.preventDefault();
    }
  }

-with gear_links=view.get_gear_links

  -if gear_links
    .flex.h-full
      -with link=gear_links|first
        .header-button.flex.flex-column.items-center.px-4{onclick:'handleMenuClicked(event)', class:'{{ link|gear_link_classes }}', data-success-url:'{{ link.success_url }}', data-href:'{{link.href}}', data-modax: '{{link.modax|escapejs}}'}
          {{link.title|escapejs}}
 
      -if gear_links|length > 1
        %temba-dropdown.items-stretch.flex.flex-column(arrowoffset="-18" offsetx="24" offsety="6" arrowsize="10")
          .menu-button.items-center.flex.flex-column.px-4.h-full(slot="toggle")
            %temba-icon( name="menu" size="1.5")
          .dropdown.px-6.py-4.text-gray-800.z-50(slot="dropdown" style="min-width:200px")
            -for link in gear_links
              -if not forloop.first
                .whitespace-nowrap.menu-item.hover-linked.font-normal{onclick:'handleMenuClicked(event)', class:'{{ link|gear_link_classes }}', data-success-url:'{{ link.success_url }}', data-href:'{{link.href}}', data-modax: '{{link.modax|escapejs}}'}
                  {{link.title}}
                  %span{class:'gear-flag'}
                    {{link.flag}}

