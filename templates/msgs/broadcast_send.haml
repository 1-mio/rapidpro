-extends 'smartmin/form.html'
-load smartmin i18n

-block fields
  -if blockers
    -for blocker in blockers
      .mb-2
        {{ blocker|safe }}

  -else
    {{ block.super }}
    .fixed-wrapper(style="position:fixed;width:362px;margin-left:200px;margin-top:-38px")
      %temba-charcount

-block extra-fields
  -if recipient_count
    -blocktrans trimmed count recipient_count as recipients
      {{ recipients }} recipient currently at this step in the flow
      -plural
        {{ recipients }} recipients currently at this step in the flow


-block form-buttons
  -if not blockers
    %input.btn.btn-primary(type="submit" value="{{ submit_button_name }}")


-block modal-extra-style
  {{ block.super }}

  :css
    temba-completion {
      --textarea-height: 110px;
    }