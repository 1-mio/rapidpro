
.flex.flex-wrap.max-w-full.justify-end
  -for group in groups
    .lbl-group.linked.ml-2.mb-1(onclick="goto(event)" href="{% url 'contacts.contact_filter' group.uuid %}" class="{% if group.is_dynamic%}lbl-group-dynamic{%endif%}")
      {{ group.name }}
  
  -for contact in contacts
    .item.contact.lbl.linked.ml-2.mb-1(onclick="goto(event)" href="{% url 'contacts.contact_read' contact.uuid %}")
      .icon.icon-user.text-dark-alpha-300.-mb-1
      {{ contact.get_display }}

  -if query
    .item.query.lbl.linked.ml-2.mb-1(onclick="goto(event)" href="{% url 'contacts.contact_list' %}?search={{ query|urlencode }}")
      .icon.icon-filter.text-dark-alpha-300.-mb-1
      {{ query }}
